<div class="font-sans text-black-200 rounded-lg mt-12 bg-blue-100 flex flex-col content-center">
    <h1>{{viewTitle}}</h1>

<form action="/" method="post" autocomplete="off" class="m-3">
<input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group mb-2">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="full Name" value="{{user.fullName}}">
        <div class="text-danger">
            {{user.fullNameError}}
        </div>
    </div>
    <div class="form-group row-m-3 mb-2">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{user.email}}">
        <div class="text-danger">
            {{user.emailError}}
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="form-group col-md-6">
        <label class="form-label">City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="{{user.city}}">
    </div>
    </div>
    <br>
    <div class="form-group">
       <button type="submit" class="btn btn-danger"><i class="fa fa-database"></i> Submit</button>
       <a class="btn btn-dark" href="/list"> <i class="far fa-list-alt fa-lg text-white"></i>  &nbsp; View allUsers </a>
    </div>
</form>
</div>